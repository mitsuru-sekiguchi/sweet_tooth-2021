<div class="grid">
    <% @sweet.each do |sweet| %>
      <div class="item-content">
          <%= link_to image_tag(sweet.image.variant(combine_options:{gravity: :center, resize:"320x320^",crop:"320x320+0+0"}).processed,class:"img-grid"), sweet_path(sweet.id) %>
        <div class="item-name">
              <%= sweet.name %>
          <div class="item-created_at">
               投稿日：<%= sweet.created_at.strftime('%Y/%m/%d') %>
          </div>
            <tr>
              <% if current_user.liked_by?(sweet.id) %>
                <td><%= link_to 'いいねを外す', destroy_like_path(sweet), method: :DELETE %></td>
              <% else %>
                <td><%= link_to 'いいね！', create_like_path(sweet), method: :POST %></td>
              <% end %>
                <td><%= link_to 'Show', sweet %></td>
                <td><%= link_to 'Edit', edit_sweet_path(sweet) %></td>
                <td><%= link_to 'Destroy', sweet, method: :delete, data: { confirm: 'Are you sure? '} %></td>
            </tr>
        </div>
      </div>
    <% end %>
  </div><!-- /.grid -->
