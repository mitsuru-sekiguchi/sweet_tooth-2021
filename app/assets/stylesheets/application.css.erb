* {
  box-sizing: border-box;
}
html {
  font-size: 100%;
}
.index {
  background: url(<%= asset_path 'syukuhuku.jpg' %>) center top no-repeat;
  background-size: cover;
  font-family: "Yu Gothic Medium", "游ゴシック Medium", YuGothic, "游ゴシック体", "ヒラギノ角ゴ Pro W3", sans-serif;
  line-height: 1.7;
  color: #432;
}

a {
  text-decoration: none;
  color: chocolate;
}

.wrapper {
  min-height: 100vh;
  position: relative;
  padding-bottom: 56px;
  box-sizing: border-box;
}
.container {
  font-size:  30px;
}
label {
  color: #432;
  font-size: 40px;
}
.field {
  margin-top: 10px;
}
/* ヘッダー
------------------------------- */
.guest {
 margin-left: 60px;
 font-size:20px;
 color: chocolate;
 font-family: 'Philosopher', serif;
}
.page-header {
  display: flex;
  justify-content: space-between;
  margin: 0 20px;
}
.logo {
  width: 300px;

}
.main-nav {
  display: flex;
  font-size: 1.25rem;
  text-transform: uppercase;
  margin-top: 34px;
  list-style: none;
}
.main-nav li {
  font-family: 'Philosopher', serif;
  margin-left: 30px;
  margin-top: 30px;
}
.login {
  background-color: chocolate;
  color: whitesmoke;
  border-radius: 5px;
  padding: 18px 32px;
}
.login:hover {
  background-color: brown;
}
.logout {
  background-color: chocolate;
  color: whitesmoke;
  border-radius: 5px;
  padding: 18px 32px;
}
.logout:hover {
  background-color: brown;
}

.sign-up {
  background-color: chocolate;
  color: whitesmoke;
  border-radius: 5px;
  padding: 18px 32px;
}
.sign-up:hover {
  background-color: brown;
}
.user-nickname {
  color: chocolate;
  border-radius: 5px;
  padding: 18px 20px;
  text-transform: none;
}
/* ログイン画面
------------------------------- */
.login-body {
  background: url(<%= asset_path 'chococake.jpg' %>) center top no-repeat;
  background-size: cover;
  font-family: 'Philosopher', serif;
}
.login-contents {
  padding-left: 100px;
}
.login-title {
  color: #432;
  font-size: 50px;
  padding: 50px 0;
}
.login-btn {
  background-color: chocolate;
  color: whitesmoke;
  font-size: 30px;
  border-radius: 5px;
  padding: 18px 40px;
  margin: 50px 0;
}

/* 新規登録画面
------------------------------- */
.signup-body {
 background: url(<%= asset_path 'ice.jpg' %>) center top no-repeat;
 background-size: cover;
 font-family: 'Philosopher', serif;
}
.signup-contents {
  padding-left: 100px;
}
.signup-btn {
  background-color: chocolate;
  color: whitesmoke;
  font-size: 30px;
  border-radius: 5px;
  padding: 18px 40px;
  margin-bottom: 10px;
  margin-top: 20px
}
.signup-title {
  color: #432;
  font-size: 50px;
  padding-top: 10px;
  padding-bottom: 20px;
}
/* 新規投稿画面
------------------------------- */
.new-body {
  background: url(<%= asset_path 'sweets.photo.jpg' %>) center top no-repeat;
  background-size: cover;
  font-family: 'Philosopher', serif;
}
.new-contents {
  padding-top: 20px;
  padding-left: 100px;
}
.sweets-title {
  font-size: 50px;
  color: aliceblue;
}
.sub-title {
  color: aliceblue;
}
.up-img {
  width: 25%;
  margin-top: 10px;
  border-style: outset;
  border-radius: 5px;
}
/* 投稿編集画面
------------------------------- */
.edit-title{
  font-size: 50px;
  color: #432;
}
.edit-sub-title {
  color: #432;
  margin-left: 10px;
}
.edit-body {
  background: url(<%= asset_path 'cake4.jpg' %>) center top no-repeat;
  background-size: cover;
  font-family: 'Philosopher', serif;
}
.edit-contents {
  padding-top: 10px;
  padding-left: 100px;
}
.edit-page-btn {
  background-color: chocolate;
  color: whitesmoke;
  font-size: 20px;
  border-radius: 5px;
  padding: 18px 40px;
  margin-top: 20px;
  margin-bottom: 10px;
}

/* 共通ボタン・フォーム
------------------------------- */
.input-default {
  font-size: 15px;
}
input[type="text"],
input[type="email"],
input[type="password"],
textarea {
  width: 480px;
  height: 200px;
  background: rgba(255,255,255, .5);
  border-style: outset;
  border-radius: 5px;
  padding: 10px;
  font-size: 20px;
}
input[type="text"],
input[type="email"],
input[type="password"] {
  width: 100%;
  max-width: 480px;
  height: 4rem;
}
.post-btn {
  background-color: chocolate;
  color: whitesmoke;
  font-size: 20px;
  border-radius: 5px;
  padding: 18px 40px;
  margin-top: 20px;
  margin-bottom: 10px;
}
input[type="submit"]:hover {
  background-color: brown;
}

/* フッター
------------------------------- */
footer {
  background-color: chocolate;
  width: 100vw;
  padding: 20px 0;
  text-align: center;
  font-family: 'Philosopher', serif;

  position: absolute;
  bottom:0;

}
.footer_name {
  color: aliceblue;
  font-size: 0.875rem;
}

